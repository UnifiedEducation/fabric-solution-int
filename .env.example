# Azure Service Principal credentials (used for Fabric CLI authentication)
AZURE_CLIENT_ID=<your-spn-client-id>
AZURE_CLIENT_SECRET=<your-spn-client-secret>
AZURE_TENANT_ID=<your-azure-tenant-id>

# Azure subscription (used for capacity management)
AZURE_SUBSCRIPTION_ID=<your-azure-subscription-id>
AZURE_RESOURCE_GROUP=<your-resource-group-name>

# Fabric capacity name (used for pause/resume automation)
FABRIC_CAPACITY_NAME=<your-fabric-capacity-name>

# GitHub Personal Access Token (used for API access)
GITHUB_PAT_TOKEN=<your-github-pat-token>
